# Git configuration for Rand Seay
[user]
	name = Rand Seay
	email = rand.seay@gmail.com
	# TODO: Replace with your actual signing key path
	# Run: ssh-keygen -t ed25519 -C "your-email@example.com" -f ~/.ssh/id_ed25519_signing
	signingkey = ~/.ssh/id_ed25519_signing

[core]
	editor = vim
	excludesfile = ~/dotfiles/git/.gitignore_global

# Modern git settings
[push]
	default = simple

[pull]
	rebase = true

[fetch]
	prune = true

# SSH signing configuration
[gpg]
	format = ssh

[commit]
	gpgsign = true

[tag]
	gpgsign = true

[gpg "ssh"]
	allowedSignersFile = ~/.config/git/allowed_signers

# Quality of life improvements
[color]
	ui = true
