#!/bin/sh

modules=(
    'bower'
<<<<<<< HEAD
    'browserify'
    'grunt'
    'grunt-cli'
    'grunt-sass'
    'gulp'
    'http-server'
    'imageoptim-cli'
    'load-grunt-tasks'
    'node-sass'
    'markdown'
    'modernizr'
    'speed-test'
    'grunt-cli'
    'gulp'
    'node-sass'
)

echo "\nInstalling Node modules via npm..."
for module in "${modules[@]}"
do
    if [ ! -h /usr/local/bin/$module  ]
    then
        echo "\n\n"
        echo "Installing $module..."
        npm install -g $module
    else
        echo "\n\n"
        echo "$module is already installed, skipping ahead..."
    fi
done
